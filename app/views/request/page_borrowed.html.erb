    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="Neighborrow - Your Platform to Borrow and Lend"
    />
    <meta name="author" content="Neighborrow" />
    <meta name="keyword" content="Borrow, Lend, CSC444" />
    <%= csrf_meta_tags %> <%= javascript_tag "window._token =
    '#{form_authenticity_token}'" %> <%= javascript_include_tag 'application',
    'data-turbolinks-track': 'reload' %>
    <title>Neighborrow - Blank</title>

    <!-- CSS files for third-party icons -->
    <link
      href="/vendors/@coreui/icons/css/coreui-icons.min.css"
      rel="stylesheet"
    />
    <link
      href="/vendors/flag-icon-css/css/flag-icon.min.css"
      rel="stylesheet"
    />
    <link
      href="/vendors/font-awesome/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link
      href="/vendors/simple-line-icons/css/simple-line-icons.css"
      rel="stylesheet"
    />

    <!-- Base stylesheets & third-party stylesheets -->
    <link href="/vendors/@coreui/coreui/css/style.css" rel="stylesheet" />
    <link href="/vendors/pace-progress/css/pace.min.css" rel="stylesheet" />

    <!-- Customized stylesheet goes here -->
  </head>

  <body
    class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-md-show"
    data-turbolinks="false"
  >
    <header
      class="app-header navbar"
      style="width:100%"
      id="headerModule"
    ></header>
    <div class="app-body">
      <div class="sidebar" id="menuModule"></div>

      <main class="main">
        <span id="subHeaderModule"></span>

        <div class="container-fluid">
          <!-- Main section - Codes for main functionalities in this block -->
          <h3>Your borrowed items</h3>
          <hr />
          <div class="row">
            <div class="col-md-6">
              <input
                type="email"
                class="form-control"
                id="transaction_search"
                placeholder="Search by item's name, item id or request id"
              />
            </div>
            <div class="col-md-4 d-sm-down-none">
              <button
                class="btn btn-outline-info"
                id="filter_init"
                data-toggle="collapse"
                href="#filter_section"
                aria-controls="filter_section"
              >
                More Filters
              </button>
            </div>
            <div class="col-md-2 d-sm-down-none">
              <select class="form-control" id="exampleFormControlSelect1">
                <option>Sort by Update Time</option>
                <option>Sort by Item's Name (A-Z)</option>
              </select>
            </div>
            <div
              class="collapse col-md-12"
              id="filter_section"
              style="margin-top:3.5vh;"
            >
              <div class="card card-body">
                <div class="row">
                  <div class="col-md-8">
                    <div class="form-group">
                      <label><strong>Show requests that are</strong></label>
                      <div class="row">
                        <div class="col-sm-2">
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="inlineCheckbox1"
                              value="option1"
                            />
                            <label
                              class="form-check-label"
                              for="inlineCheckbox1"
                              >Pending</label
                            >
                          </div>
                        </div>
                        <div class="col-sm-2">
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="inlineCheckbox2"
                              value="option2"
                            />
                            <label
                              class="form-check-label"
                              for="inlineCheckbox2"
                              >Completed</label
                            >
                          </div>
                        </div>
                        <div class="col-sm-2">
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="inlineCheckbox3"
                              value="option3"
                            />
                            <label
                              class="form-check-label"
                              for="inlineCheckbox3"
                              >Accepted</label
                            >
                          </div>
                        </div>
                        <div class="col-sm-2">
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="inlineCheckbox4"
                              value="option3"
                            />
                            <label
                              class="form-check-label"
                              for="inlineCheckbox3"
                              >Rejected</label
                            >
                          </div>
                        </div>
                        <div class="col-sm-2">
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="inlineCheckbox5"
                              value="option3"
                            />
                            <label
                              class="form-check-label"
                              for="inlineCheckbox3"
                              >Cancelled</label
                            >
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <label for="exampleFormControlInput1"
                      ><strong>Show requests submitted in</strong></label
                    >
                    <select class="form-control form-control-sm" id="dd">
                      <option>last 1 week</option>
                      <option>last 1 month</option>
                      <option>last 3 months</option>
                      <option>last 6 months</option>
                      <option>last 1 year</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <br />
          <div class="row" id="list_section"></div>
