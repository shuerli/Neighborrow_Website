	<!-- CSS files for third-party icons-->
	<link href="/vendors/@coreui/icons/css/coreui-icons.min.css" rel="stylesheet">
	<link href="/vendors/flag-icon-css/css/flag-icon.min.css" rel="stylesheet">
	<link href="/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
	<link href="/vendors/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

	<!-- Base stylesheets & third-party stylesheets-->
	<link href="/vendors/@coreui/coreui/css/style.css" rel="stylesheet">
	<link href="/vendors/pace-progress/css/pace.min.css" rel="stylesheet">

	<!-- Customized stylesheet goes here-->

</head>


	<% if logged_in_as_user? (@account.id) %>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-md-show" data-turbolinks="false">
	<!-- <header class="app-header navbar" style="width:100%" id="headerModule">

	</header> -->
	
	
	<div class="app-body">
		<div class="sidebar" id="menuModule"></div>

		<main class="main">
			<span id="subHeaderModule"></span>

			<div class="container-fluid">
				<!-- Main section - Codes for main functionalities in this block -->
				<h2>Account Profiles</h2>
				<hr>
            
	            <div class="row">
	              <div class="col-lg-12">
	                <div class="card">
	                  <div class="card-header">
	                    <strong class="text-muted">Profile</strong>
	                    <%= link_to "Edit Profile", edit_profile_path, method: :get, class: "pull-right" %>
	                  </div>
	                    
	                  <div class="card-body">
	                  	<form method="put" class="form-horizontal">
	                  		<div class="form-group">
		                      <label for="username">Profile Picture</label>
		                      <br>
		                      <%= image_tag @profile.avatar, :size => "75x75" , :class => "img-thumbnail"%>
		                    </div>
	                    	<div class="form-group">
		                      <label for="username">User Name</label>
		                      <input class="form-control" name="profile[display_name]" id="username" readonly type="text" value=<%= @profile.display_name %>>
		                    </div>
		                    <div class="form-group">
		                      <label for="email">Email Address</label>
		                      <input class="form-control" name="profile[email]" id="email" type="text" readonly value=<%= @profile.email %>>
		                    </div>
			                <div class="row">
			                  	<div class="form-group col-lg-4">
			                      <label>First Name</label>
		                      		<input class="form-control" name="profile[first_name]" id="first_name" type="text" readonly value=<%= @profile.first_name %>>
				                </div>
			                  	<div class="form-group col-lg-4">
			                      <label>Middle Name</label>
		                      	  <input class="form-control" name="profile[middle_name]" id="middle_name" type="text" readonly value=<%= @profile.middle_name %>>
				                </div>
			                  	<div class="form-group col-lg-4">
			                      <label>Last Name</label>
		                      	  <input class="form-control" name="profile[last_name]" id="last_name" type="text" readonly value=<%= @profile.last_name %>>
				                </div>
			                </div>	
		                    <div class="form-group">
		                      <label for="phoneNumber">Phone Number</label>
		                      <input class="form-control" name="profile[phone_number]" id="phone_number" type="text" readonly value=<%= @profile.phone_number %>>
		                    </div>
		                    <div class="form-group">
		                      <label for="gender">Gender</label>
		                      <input class="form-control" name="profile[gender]" id="gender" type="text" readonly value=<%= @profile.gender %>>
		                    </div>         
			                <div class="row">  
			                    <div class="form-group col-lg-6">
			                      <label for="phoneNumber">Language</label>
			                      <input class="form-control" name="profile[language]" id="language" type="text" readonly value=<%= @profile.language %>>
			                    </div>
			                    <div class="form-group col-lg-6">
			                      <label for="phoneNumber">Country</label>
			                      <input class="form-control" name="profile[country]" id="country" type="text" readonly value=<%= @profile.country %>>
			                    </div>
			                </div> 
			                
		                    <div class="form-group">
		                      <label>Interested Categories</label>
		                      <br>
		                      	<% interests = ['Home, Garden, Pets & Tools','Books & Audible','Electronics, Computers & Office','Automotive & Industrial','Toys, Kids, Baby & STEM','Clothing, Shoes & Jewelry','Sports & Outdoors','Music, Movies & TV Shows']%>
		  						<div class="row">
			  						<% interests.each do |t|%>
				  						<div class="col-md-3">
				  							<% isChecked = false %>
				  							<% if @profile.interest and  t.in?( @profile.interest) %>
				  								<% isChecked = true %>
				  							<%end%>
			                          		<div class="form-check form-check-inline mr-1">
											    <input type="checkbox" disabled="" class="form-check-input" <%if isChecked%> checked= "checked"<%end%> >
						  						<label><%= t%></label>
						  					</div>
				  						</div>
			  						<%end%>
				  				</div>
		                    </div> 
	                    </form>
	                    
	                    
	                    <button class="btn btn-primary pull-right"  ><%= link_to "Edit Profile", edit_profile_path, method: :get, style: "color: white" %></button>
	                    
	                    
	                  </div>
	                </div>
	              </div>
	              <!-- /.col-->
	            </div>
	            <!-- /.row-->	
            
			</div>
			
		</main>
		
	</div>
<% else %>
			<div class = "app flex-row align-items-center">
			
				<!-- <div class="row"> -->
					<div class="container">
				      <div class="row justify-content-center">
				        <div class="col-md-6">
				          <div class="clearfix">
				            <h1 class="float-left display-3 mr-4">403</h1>
				            <h4 class="pt-3">Oops! Forbidden Page</h4>
				            <p class="text-muted">
					            Looks like you don't have permission to access this page.
					            You might be accessing an account's profile that's not yours
				            </p>
				          </div>
				        </div>
				      </div>
				    </div>
			</div>
		<% end %>


